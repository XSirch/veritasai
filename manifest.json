{
  "manifest_version": 3,
  "name": "VeritasAI - Verificador de Informações",
  "version": "1.0.21",
  "description": "Extensão para verificação automática de confiabilidade de informações usando IA e fact-checking",
  
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "contextMenus",
    "notifications"
  ],
  
  "host_permissions": [
    "https://factchecktools.googleapis.com/*",
    "https://api.groq.com/*",
    "http://localhost:6333/*"
  ],
  
  "optional_permissions": [
    "background"
  ],
  
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>", "file://*/*"],
      "js": [
        "content/content.js"
      ],
      "css": [
        "assets/styles/content.css",
        "assets/styles/tooltip.css"
      ],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "VeritasAI - Verificar Informações",
    "default_icon": {
      "16": "assets/icons/icon-16.png",
      "32": "assets/icons/icon-32.png",
      "48": "assets/icons/icon-48.png",
      "128": "assets/icons/icon-128.png"
    }
  },
  
  "options_page": "options/options.html",
  
  "icons": {
    "16": "assets/icons/icon-16.png",
    "32": "assets/icons/icon-32.png",
    "48": "assets/icons/icon-48.png",
    "128": "assets/icons/icon-128.png"
  },
  
  "commands": {
    "verify-selected-text": {
      "suggested_key": {
        "default": "Ctrl+Shift+V",
        "mac": "Command+Shift+V"
      },
      "description": "Verificar texto selecionado"
    },
    "toggle-extension": {
      "suggested_key": {
        "default": "Ctrl+Shift+T",
        "mac": "Command+Shift+T"
      },
      "description": "Ativar/desativar extensão"
    }
  },
  
  "web_accessible_resources": [
    {
      "resources": [
        "assets/styles/*.css",
        "assets/icons/*.png",
        "assets/fonts/*.woff2",
        "background/api-integration.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';"
  },
  
  "minimum_chrome_version": "88",
  
  "author": "VeritasAI Team",
  "homepage_url": "https://github.com/your-username/veritas-ai-extension"
}
